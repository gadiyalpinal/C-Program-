#include <stdio.h> 
int main() 
{
    float p, r, t, i; 

    printf("Enter the principal amount: "); 
    scanf("%f", &p); 

    printf("Enter the annual rate : "); 
    scanf("%f", &r); 

    printf("Enter the time : "); 
    scanf("%f", &t); 

    
    i = (p * r * t) / 100;

    printf("The Simple Interest is: %f", i); 

}
 
